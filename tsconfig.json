{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "strict": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "outDir": "build",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "declaration": true,
    "paths": {
      "~/*": ["src/*"]
    },
  },
  "include": ["src/**/*"]
}